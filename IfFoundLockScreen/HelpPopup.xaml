<UserControl x:Class="IfFoundLockScreen.HelpPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="400" d:DesignWidth="480">

    <Grid Height="350" Width="480" x:Name="LayoutRoot" Background="#CC000000">
        <TextBlock x:Name="DayOfWeek" TextAlignment="Left" VerticalAlignment="Center"
                 TextWrapping="Wrap"
                       Margin="24,0,24,0" Style="{StaticResource PhoneTextTitle3Style}" Tap="DayOfWeek_Tap">
            If your phone is locked, what's the easiest way to find it? Remotely activate the GPS? 
            <LineBreak/>
            <LineBreak/>
            Why not just put your contact information on the lockscreen?
            
            This app does that. It "stamps" details on your wallpaper of choice. 
            <LineBreak/>
            <LineBreak/>
            Then, set your new wallaper as your lockscreen from Windows Phone Settings.
        </TextBlock>

    </Grid>
</UserControl>
